{
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": false,
        "target": "ES2018",
        "lib": [
            "ES2018",
            "dom"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}